---
name: efsdriver

templates:
  install.erb: bin/pre-start
  ctl.erb: bin/efsdriver_ctl
  ca.crt.erb: config/certs/ca.crt
  client.crt.erb: config/certs/client.crt
  client.key.erb: config/certs/client.key
  server.crt.erb: config/certs/server.crt
  server.key.erb: config/certs/server.key
  rpcbind.erb: bin/rpcbind_ctl

packages:
- efs-nfs-debs
- efsdriver

consumes:
- name: mapfs
  type: mapfs

properties:
  efsdriver.listen_addr:
    description: "address efsdriver listens on"
    default: "127.0.0.1:7089"
  efsdriver.efs_vol_tools_addr:
    description: "host:port to serve efs volume tools functions (for drivers colocated with the efs broker)"
    default: ""
  efsdriver.debug_addr:
    description: "address efsdriver will serve debug info"
    default: "127.0.0.1:7189"
  efsdriver.driver_path:
    description: "path to place driver spec/json file for volman to discover"
    default: "/var/vcap/data/voldrivers"
  efsdriver.cell_mount_path:
    description: "path to mount volumes into on the cell"
    default: "/var/vcap/data/volumes/efs"
  efsdriver.log_level:
    description: "efsdriver log level"
    default: "info"
  efsdriver.log_time_format:
    description: "Format for timestamp in component logs. Valid values are 'unix-epoch' and 'rfc3339'."
    default: "rfc3339"
  efsdriver.tls.ca_cert:
    description: "PEM encoded CA certificate. If not provided, driver will not accept TLS connections"
    default: ""
    example: "|
      -----BEGIN CERTIFICATE-----
      ...
      -----END CERTIFICATE-----"
  efsdriver.tls.server_cert:
    description: "PEM encoded server certificate"
    default: ""
    example: "|
      -----BEGIN CERTIFICATE-----
      ...
      -----END CERTIFICATE-----"
  efsdriver.tls.server_key:
    description: "PEM encoded server private key"
    default: ""
    example: "|
      -----BEGIN RSA PRIVATE KEY-----
      ...
      -----END RSA PRIVATE KEY-----"
  efsdriver.tls.client_cert:
    description: "PEM encoded client certificate"
    default: ""
    example: "|
      -----BEGIN CERTIFICATE-----
      ...
      -----END CERTIFICATE-----"
  efsdriver.tls.client_key:
    description: "PEM encoded client private key"
    default: ""
    example: "|
      -----BEGIN RSA PRIVATE KEY-----
      ...
      -----END RSA PRIVATE KEY-----"
  efsdriver.ssl.insecure_skip_verify:
    description: "When connecting over SSL, skip verification of server IP addresses in the certificate"
    default: false
  efsdriver.ldap_svc_user:
    description: "ldap service account user name (required for LDAP integration only)"
    default: ""
  efsdriver.ldap_svc_password:
    description: "ldap service account password (required for LDAP integration only)"
    default: ""
  efsdriver.ldap_host:
    description: "ldap server host name or ip address (required for LDAP integration only)"
    default: ""
  efsdriver.ldap_port:
    description: "ldap server port (required for LDAP integration only)"
    default: 389
  efsdriver.ldap_proto:
    description: "ldap server protocol (required for LDAP integration only)"
    default: tcp
  efsdriver.ldap_user_fqdn:
    description: "ldap fqdn for user records we will search against when looking up user uids (required for LDAP integration only)"
    example: "cn=Users,dc=corp,dc=test,dc=com"
    default: ""
  efsdriver.ldap_ca_cert:
    description: "ldap server CA certificate. If not provided driver will be connecting to LDAP server without TLS"
    example: "|
      -----BEGIN CERTIFICATE-----
      ...
      -----END CERTIFICATE-----"
    default: ""
  efsdriver.admin_addr:
    description: "address efsdriver listens on for admin requests"
    default: "127.0.0.1:7590"